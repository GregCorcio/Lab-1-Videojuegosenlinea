using UnityEngine;

public class MenuVisibility : MonoBehaviour
{
    // Nombre del menú, útil si deseas identificar o manejar el menú por su nombre
    public string nameMenu;

    // Este campo oculta la variable en el Inspector, pero la mantienes como pública en el código.
    [HideInInspector] public bool isOpen;

    // Método para hacer visible el menú
    public void Visible()
    {
        isOpen = true;
        gameObject.SetActive(true); // Activa el objeto en la escena, mostrando el menú
    }

    // Método para ocultar el menú
    public void NoVisible()
    {
        isOpen = false;
        gameObject.SetActive(false); // Desactiva el objeto en la escena, ocultando el menú
    }
}
